{
  "name": "@sirasagi62/chizu",
  "version": "0.1.1",
  "publishConfig": {
    "access": "public"
  },
  "description": "A command-line tool that summarizes the code contained in a repository",
  "main": "dist/index.js",
  "bin": {
    "chizu": "./dist/index.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean --minify --shims",
    "dev": "tsup src/index.ts --format esm --watch",
    "prepare": "npm run build"
  },
  "keywords": [
    "repomap",
    "repository-map",
    "ai-context",
    "llm-tools",
    "code-analysis",
    "tree-sitter",
    "ast",
    "aider",
    "cli"
  ],
  "author": "Gota Okabe",
  "license": "MIT",
  "packageManager": "pnpm@10.29.2",
  "dependencies": {
    "code-chopper": "^0.1.8",
    "commander": "^14.0.3",
    "ignore": "^7.0.5"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}
